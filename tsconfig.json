{
  "compilerOptions": {
    "moduleResolution": "bundler",
    "module": "es2020",
    "lib": ["es2020", "DOM"],
    "target": "es2020",
    "isolatedModules": true,
    "resolveJsonModule": true,
    "sourceMap": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "allowJs": true,
    "checkJs": true
  },
  "include": [
    "src/**/*.d.ts",
    "src/**/*.js",
    "src/**/*.ts",
    "src/**/*.svelte",
    "src/**/*.yaml",
    "src/**/*",
    "src/node_modules",
    ".svelte-kit/ambient.d.ts"
  ],
  "extends": "./.svelte-kit/tsconfig.json"
}
